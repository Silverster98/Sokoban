<!-- 开始页面-->
<Page x:Class="Sokoban.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sokoban"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid Background="#FF42586A">

        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width ="800"/>
        </Grid.ColumnDefinitions>
        <Image Source="resource/BackgroundPicture.png" Margin="493,145,10,0"/>
        <TextBlock FontWeight="Bold" FontSize="70" Margin="177,55,160,281" FontFamily="Monoton"><Run Text="SOKOBAN"/><LineBreak/><Run/></TextBlock>
        <Button Background="#FF42586A" Click="Button_Start_Click" x:Name="Button_StartGame" Margin="302,274,322,120">
            <TextBlock FontWeight="Bold" FontSize="22" RenderTransformOrigin="0.736,0.25">START GAME</TextBlock>
        </Button>
    </Grid>
</Page>
