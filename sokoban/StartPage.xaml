<!-- 开始页面-->
<Page x:Class="Sokoban.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sokoban"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid Background="#FF42586A">
        <Grid.RowDefinitions>
            <RowDefinition Height="186"/>
            <RowDefinition Height="264"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width ="800"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row ="0">
            <TextBlock FontWeight="Bold" FontSize="50" Margin="262,80,251,42"><Run Text="SOKOBAN"/><LineBreak/><Run/></TextBlock>
        </Grid>
        <Grid Grid.Row ="1">
            <Button Background="#FF42586A" Click="Button_Start_Click" x:Name="Button_StartGame" Margin="295,106,295,80">
                <TextBlock FontWeight="Bold" FontSize="22">START GAME</TextBlock>
            </Button>
        </Grid>

    </Grid>

</Page>
