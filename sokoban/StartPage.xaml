<!-- 开始页面-->
<Page x:Class="Sokoban.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sokoban"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid Background="#FF42586A">
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width ="800"/>
        </Grid.ColumnDefinitions>
        <Image Source="resource/BackgroundPicture.png" Margin="0,130,272,49"/>
        <TextBlock FontWeight="Bold" FontSize="50" Margin="272,52,240,320"><Run Text="SOKOBAN"/><LineBreak/><Run/></TextBlock>
        <Button Background="#FF42586A" Click="Button_Start_Click" x:Name="Button_StartGame" Margin="533,242,57,122">
            <TextBlock FontWeight="Bold" FontSize="22">START GAME</TextBlock>
        </Button>
    </Grid>
</Page>
