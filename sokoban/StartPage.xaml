<!-- 开始页面-->
<Page x:Class="Sokoban.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sokoban"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Canvas>
        <TextBlock Canvas.Left="223" Canvas.Top="125" FontWeight="Bold" FontSize="40" Text="SOKOBAN GAME" Width="357"/>
        <Button Click="Button_Start_Click" x:Name="Button_StartGame" Canvas.Bottom="55" Canvas.Right="100">
            <TextBlock FontWeight="Bold" FontSize="22" Padding="20,5" UseLayoutRounding="True" ScrollViewer.CanContentScroll="True" Foreground="SeaGreen" >START GAME</TextBlock>
        </Button>
    </Canvas>
</Page>
